<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
}

/* Body Styling */
body {
    background-color: #f4f4f4;
    color: #333;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
}

/* Top Bar */
.top-bar {
    width: 100%;
    background-color: #222;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    position: fixed;
    top: 0;
    left: 0;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 1000;
}

/* Main Content Area */
.main-content {
    width: 100%;
    margin-top: 70px; /* Adjust this value to match the height of .top-bar */
    padding: 20px;
}

/* Controls Container */
.controls-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

/* Sort Blogs */
.sort-blogs {
    display: flex;
    align-items: center;
    gap: 10px;
}

/* Search Box */
.search-box {
    display: flex;
    align-items: center;
    gap: 10px;
}

/* Input and Select Styling */
input, select {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    outline: none;
}

/* Button Styling */
.tab{
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    background-color: #404040;
    color: #FFFFFF;
    transition: background 0.3s;
}
button {
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}

button.primary {
    background-color: #28a745;
    color: white;
    transition: background 0.3s;
}
.logoutButton {
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    background-color: #dc3545;
    color: white;
    transition: background 0.3s;
}

button.primary:hover {
    background-color: #218838;
}

button.secondary {
    background-color: #dc3545;
    color: white;
    transition: background 0.3s;
}
.logsign{
    display: flex;
    justify-content: space-evenly;
    font-size: 25px;
    color:#ddd;
    margin-bottom: 5px;

}



button.secondary:hover {
    background-color: #c82333;
}
.submit{
    background-color:#007bff;
    color: white;
    transition: background 0.3s;

}
.submit:hover{
    background-color: #0056b3; /* Darker blue on hover */
    transform: translateY(-1px);
}
/* Blog Card */
.blog-card {
    width: 90%;
    margin: 0 auto 20px auto; /* Added spacing between cards */
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    background: #fff;
    word-wrap: break-word;
    display: flex;
    flex-direction: column;
}
.blog-body {
    max-height: none; /* Remove height limit */
    overflow: visible; /* Allow full content to be visible */
    text-overflow: clip; /* Ensure text is fully visible */
    white-space: normal; /* Ensures text wraps properly */
    word-wrap: break-word; /* Prevents overflow */
}
.blog-content p {
    margin: 0;
    line-height: 1.5; /* Improve readability */
}
.blog-card:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}
.blog-content {
    max-height: 150px; /* Limit height for consistency */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal; /* Prevents text from going out */
}

/* Responsive Design */
@media screen and (max-width: 768px) {
    .top-bar {
        flex-direction: column;
        text-align: center;
        padding: 10px;
    }
    
    .controls-container {
        flex-direction: column;
        align-items: stretch;
        gap: 10px;
    }

    
}
